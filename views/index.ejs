<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Chatsapp</title>
    <link rel="stylesheet" href="/style.css" />
</head>
<body>
    <h3>
        All chats!
    </h3>
    <form method="GET" action="/chats/new">
        <button>New Chat</button>
    </form>
    <% for(let chat of chats) { %>
    <div class="chat">
        <p>
            From : <%= chat.from %>
        </p>
        <div class="msg">
            <p>
                <%= chat.msg %>
            </p>
        </div>
        <p>
            Received by <%= chat.to %>
        </p>
        <p>
            <%= chat.created_at.toString().split(" ")[4] %> <br>
            <%= chat.created_at.toString().split(" ").slice(0,4).join(" ") %> <br>
        </p>
        <form method="GET" action="/chats/<%= chat._id %>/edit">
            <button>Edit Chat</button>
        </form>
        <form method="POST" action="/chats/<%= chat._id %>?_method=DELETE">
            <button>Delete</button>
        </form>
    </div>
    <% } %>
</body>
</html>

 
